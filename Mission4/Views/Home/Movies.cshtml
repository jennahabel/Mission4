
@{
    ViewData["Title"] = "Movies";
}
@model Mission4.Models.AppResponse

<!--Movie page to enter new movies into the database-->

<div class="text-center">
    <h1 class="display-4">My Movie Database</h1>
    <p>Enter a worthy movie to add to the collection</p>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Categories c in ViewBag.allCategories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="">Select a Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />

        <label asp-for="Lent">Lent to: </label>
        <input asp-for="Lent" /><br />

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" /><br /><br />

        <button type="submit">Add Movie</button>
    </form>
</div>

    
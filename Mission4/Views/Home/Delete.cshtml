@{
    ViewData["Title"] = "Delete Movie";
}

@model AppResponse

<!--Page you see when you delete a movie-->

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete record for "@Model.Title"</h3>
<form method="post">
    <button type="submit" class="btn btn-secondary">Delete</button>
    <a asp-controller="Home" asp-action="ShowMovies" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>